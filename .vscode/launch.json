{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug minishell",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/minishell",
            "args": ["src"],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "Build minishell",
            "stopOnEntry": false,
            "initCommands": [ "process handle SIGTRAP -n true -p true -s false",
    "settings set target.process.follow-fork-mode child"]

        }
    ]
}